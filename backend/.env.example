# ========================================
# Discord Bot設定
# ========================================
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_server_guild_id

# ========================================
# サーバー設定
# ========================================
PORT=4040
BASE_URL=https://todo.example.com

# ========================================
# 認証設定
# ========================================
SESSION_SECRET=your_session_secret_here

# パスワード認証（ENABLE_PASSWORD_LOGIN=true で有効化）
ENABLE_PASSWORD_LOGIN=false
ADMIN_PASSWORD=your_admin_password_here

# ========================================
# 権限設定
# ========================================
# PERMISSION_MODE: disable（制限なし）/ white（ホワイトリスト）/ black（ブラックリスト）
PERMISSION_MODE=disable
# white/black モード時に対象とするロールID
PERMISSION_ROLE_ID=

# ========================================
# チャンネル設定（オプション）
# ========================================
# パネル設置チャンネル（起動時にパネルを自動送信/更新）
PANEL_CHANNEL_ID=
# 通知チャンネル（タスクの作成・更新・完了・削除を通知）
NOTIFY_CHANNEL_ID=

# ========================================
# 表示設定
# ========================================
# タイムゾーン（デフォルト: Asia/Tokyo）
TIMEZONE=Asia/Tokyo
